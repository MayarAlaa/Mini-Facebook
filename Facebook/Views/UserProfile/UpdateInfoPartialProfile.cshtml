@model MyUser
@using (Html.BeginForm("UpdateInfo", "UserProfile", FormMethod.Post))
{
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label asp-for="FName"></label>
        <input type="text" class="form-control" id="usr" asp-for="FName" value="@Model.FName">
        <span asp-validation-for="FName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LName"></label>
        <input type="text" class="form-control" id="usr" asp-for="LName" value="@Model.LName">
        <span asp-validation-for="LName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Bio"></label>
        <textarea class="form-control" id="bio" asp-for="Bio">@Model.Bio</textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>

    </div>

    <div class="form-group">
        <div class="col-xs-2">
            <label asp-for="BDay" class="control-label">Day</label>
            <input asp-for="BDay" class="form-control" type="number" />
            <span asp-validation-for="BDay" class="text-danger"></span>
        </div>
        <br />
        <div class="col-xs-2">
            <input asp-for="BMonth" class="form-control" type="number" />
            <span asp-validation-for="BMonth" class="text-danger"></span>
        </div>
        <br />
        <div class="col-xs-2">

            <input asp-for="BYear" class="form-control" type="number" />
            <span asp-validation-for="BYear" class="text-danger"></span>
        </div>


    </div>


    <div class="modal-footer">
        <input type="submit" class="btn btn-default btns" value="Save">
        <button type="button" class="btn btn-default btns" data-dismiss="modal">Close</button>
    </div>


}