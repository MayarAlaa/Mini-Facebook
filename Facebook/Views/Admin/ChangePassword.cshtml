@model Facebook.ViewModels.PasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<div class="container">

    <form class="card" asp-action="ChangePassword">
        <div class="card-header">
            <h3>Change Password</h3>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-body">
            <div class="form-group">
                @*<label for="old">Old Password:</label>
        <input type="password" class="form-control" id="old">*@

                <label asp-for="OldPassword" class="control-label">Old Password</label>
                <input asp-for="OldPassword" class="form-control" type="password" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*<label for="newp">New Password:</label>
                    <input type="password" class="form-control" id="newp">*@
                <label asp-for="NewPassword" class="control-label">New Password</label>
                <input asp-for="NewPassword" class="form-control" type="password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*<label for="conp">Confirm Password:</label>
                    <input type="password" class="form-control" id="conp">*@
                <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-default btns" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}