@model MyUser 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FaceBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/post.css" />
    <link rel="stylesheet" href="~/css/profile.css" />
</head>
<body>
    <header>
        <div class="container-fluid">
            <nav id="navbar" class="row navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">

                <span class="navbar-brand mb-0 h1" id="add">Facebook</span>

                 <div class="input-group" id="srch">
                    <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                      <a class="btn btn-default" id="btn_search" asp-area="" asp-controller="User" asp-action="Search">Search</a>
                    </div>
                  </div>


                  <div class="navbar-collapse collapse d-md-inline-flex flex-md-row-reverse" id="navitems">
                      <ul class="navbar-nav flex-grow-1">
                          <li class="nav-item">

                              <a class="nav-link text-white" asp-area="" asp-controller="UserProfile" asp-action="Profile" asp-route-Id="@Model.Id">Profile</a>

                          </li>
                          <li class="nav-item">
                              <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Index">Home</a>
                          </li>

                          <li class="nav-item">
                              <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="ChangePassword">Settings</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
                          </li>
                      </ul>
                   </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/post.js"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
